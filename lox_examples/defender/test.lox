import sprite

const width=1000
const height=800
const worldwidth=width*10
var win = window(width,height)
win.init()

img = image("pngs/lander.png")
h = img.height()
w = img.width()/3.0
txt = texture(img,3,1,3)

print (h,w)

pixh =h/8.0
pixw = w/6.0
expl = 1.0

while (!win.should_close()) {

    win.begin()
    win.clear(10,10,10, 255)
    foreach( var i in range(0,6)){
        foreach ( var j in range(0,8)) {
            x = i * pixw
            y = j * pixh
            txt.animate(10)
            print (x,y, pixw, pixh)
            subx=500 +expl *(x- (w/2)  )
            suby=500 +expl *(y- (h/2)  )
            win.draw_texture_rect(txt, subx, suby, x, y, pixw, pixh)
        }
    }
    expl = expl + 1
    if (expl > 20.0) {
        expl = 1.0
    }
  
    
    win.end()
}
win.close()