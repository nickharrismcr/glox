{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go",
      "type": "go",
      "request": "launch",
      "showLog": false,
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["-d", "nod.lox"],
      "env": {
        "LOX_PATH": "${workspaceFolder}",
        "PATH": "${workspaceFolder}/bin:${env:PATH}"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
